#!/bin/bash
# Aliases
#

# cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."


# ls aliases
if [ "$DISTRO" = "Darwin" ]; then
	alias ls="gls --color=auto"
else
	alias ls="ls --color=auto -N"
fi

alias la="ls -A"
alias ll="ls -lhAr"

# shortcuts
alias _="sudo"
alias g="git"
alias v="vim"
alias rr="rm -r"
alias sudo="sudo "
# ip aliases
alias ipdns="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"

# vim 
alias vi="vim"
# calls the server function
alias vim='vim_with_servername'

if [ "$DISTRO" != "Darwin" ]; then
    alias open="xdg-open"
fi

# listing cd
alias cd="long_and_annoying_cd"
